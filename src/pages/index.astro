</Layout>

<style>
	:root {
		--astro-gradient: linear-gradient(0deg, #4f39fa, #da62c4);
	}

	section {
		padding: 2rem 0;
	}

	.hero {
		display: flex;
		justify-content: center;
		gap: 1rem 1rem;
		align-items: center;
		flex-wrap: wrap;
	}

	.hero h1 {
		margin-bottom: 1rem;
	}

	h4 {
		font-style: normal;
		font-weight: 300;
		color: #919191;
		margin-bottom: 0.5rem;
	}

	p {
		margin-bottom: 1rem;
		max-width: 30rem;
		font-weight: 300;
	}

	#projects-list {
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	#projects-list h2 {
		margin-bottom: 1rem;
	}

	ul {
		list-style-type: none;
	}

	.grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
		column-gap: 1rem;
		row-gap: 3rem;
	}


